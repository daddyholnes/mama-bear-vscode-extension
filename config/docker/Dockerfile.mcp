FROM node:18-alpine

WORKDIR /app

# Create package.json
RUN echo '{"name":"mama-bear-mcp","version":"1.0.0","main":"server.js","scripts":{"start":"node server.js"},"dependencies":{"express":"^4.18.2"}}' > package.json

# Install dependencies
RUN npm install

# Create the MCP server
COPY <<EOF server.js
const express = require('express');
const app = express();

app.use(express.json());

app.get('/health', (req, res) => {
  res.json({
    status: 'ok', 
    service: 'mama-bear-mcp',
    timestamp: new Date().toISOString()
  });
});

app.get('/api/tools', (req, res) => {
  res.json({
    tools: [
      'file-operations',
      'code-analysis', 
      'git-operations',
      'workspace-management',
      'ai-assistance'
    ]
  });
});

app.post('/api/mcp', (req, res) => {
  res.json({
    status: 'received',
    data: req.body,
    timestamp: new Date().toISOString()
  });
});

const PORT = process.env.MCP_PORT || 8812;
const HOST = process.env.MCP_HOST || '0.0.0.0';

app.listen(PORT, HOST, () => {
  console.log(\`ğŸ³ MCP Server running on \${HOST}:\${PORT}\`);
});
EOF

EXPOSE 8812

CMD ["npm", "start"]
